<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    android:orientation="vertical"
    tools:context=".activities.ContributionPopUp">
    <TextView
        android:id="@+id/contribution_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert the amount of money you contributed to the post!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/contribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#30ffffff"
        android:hint="Contribution in $"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawablePadding="20dp"
        android:inputType="number"/>
    <Button
        android:id="@+id/addContributionButton"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:background="@drawable/button_background"
        android:layout_margin="10dp"
        app:backgroundTint="@null"
        android:layout_gravity="center"
        android:text="Add"/>


</LinearLayout>